<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.pite.batterymonitors.DiagnosActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <Button
            android:id="@+id/Data_analysis_btn"
            style="@style/size15"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/switch_pictrue"
            android:focusable="true"
            android:text="@string/DataAnalysis"
            android:textColor="@color/heise" />

        <Button
            android:id="@+id/U_analysis_btn"
            style="@style/size15"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/switch_pictrue"
            android:text="@string/voltageAnalysisAD"
            android:textColor="@color/heise" />

        <Button
            android:id="@+id/R_analysis_btn"
            style="@style/size15"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/switch_pictrue"
            android:text="@string/resistanceAnalysisAD"
            android:textColor="@color/heise" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/diagnosFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>