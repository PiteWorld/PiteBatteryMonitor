<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/thrend_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cortnetschart"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/Battery_station"
                    android:textColor="@color/heise" />

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/Battery_type2"
                    android:textColor="@color/heise" />

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/total_voltage"
                    android:textColor="@color/heise" />
            </LinearLayout>

            <LinearLayout
                style="@style/size10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/trenData_name"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/heise" />

                <TextView
                    android:id="@+id/trenData_Battery_type"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/heise" />

                <TextView
                    android:id="@+id/trenData_total_voltage"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/heise" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/Battery_group"
                    android:textColor="@color/heise" />

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/Internal_standard"
                    android:textColor="@color/heise" />

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/total_current"
                    android:textColor="@color/heise" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/trenData_Battery_group"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/heise" />

                <TextView
                    android:id="@+id/trenData_Internal_standard"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/heise" />

                <TextView
                    android:id="@+id/trenData_total_current"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/heise" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/Battery_manufacturers"
                    android:textColor="@color/heise" />

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/Battery_num"
                    android:textColor="@color/heise" />

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|right"
                    android:text="@string/pite_battery_num"
                    android:textColor="@color/heise" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/trenData_manufacturers"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/heise" />

                <TextView
                    android:id="@+id/trenData_Battery_num"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/heise" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        style="@style/size10"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="@string/Battery_status"
                        android:textColor="@color/heise" />

                    <TextView
                        android:id="@+id/trenData_Battery_status"
                        style="@style/size10"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/heise" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/trend_sydl"
                        style="@style/size10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="@string/pite_battery_charge"
                        android:textColor="@color/heise" />

                    <TextView
                        android:id="@+id/trenData_charge"
                        style="@style/size10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/heise" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <Spinner
                    android:id="@+id/trenData_sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/cortnetschart"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trenddata_title"
        android:layout_below="@+id/thrend_ll"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/title_cell"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal" >
    </LinearLayout>
	<!--  android:divider="@drawable/line"
        android:dividerHeight="1dp" -->
    <com.pite.batterymonitor.utils.RefreshListView
        android:layout_below="@+id/trenddata_title"
        android:id="@+id/trend_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/content_cell"
        android:divider="@drawable/line"
        android:dividerHeight="1dp" 
         >
    </com.pite.batterymonitor.utils.RefreshListView>
</RelativeLayout>