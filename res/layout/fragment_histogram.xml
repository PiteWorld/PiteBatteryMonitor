<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cortnetschart"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/Battery_station"
                    android:textColor="@color/heise" />

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/Battery_type2"
                    android:textColor="@color/heise" />

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/total_voltage"
                    android:textColor="@color/heise" />
            </LinearLayout>

            <LinearLayout
                style="@style/size10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/Histogram_name"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/heise" />

                <TextView
                    android:id="@+id/Histogram_Battery_type"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/heise" />

                <TextView
                    android:id="@+id/Histogram_total_voltage"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/heise" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/Battery_group"
                    android:textColor="@color/heise" />

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/Internal_standard"
                    android:textColor="@color/heise" />

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/total_current"
                    android:textColor="@color/heise" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/Histogram_Battery_group"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/heise" />

                <TextView
                    android:id="@+id/Histogram_Internal_standard"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/heise" />

                <TextView
                    android:id="@+id/Histogram_total_current"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/heise" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/Battery_manufacturers"
                    android:textColor="@color/heise" />

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical|right"
                    android:text="@string/Battery_num"
                    android:textColor="@color/heise" />

                <TextView
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|right"
                    android:text="@string/Battery_time1"
                    android:textColor="@color/heise" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/Histogram_manufacturers"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/heise" />

                <TextView
                    android:id="@+id/Histogram_Battery_num"
                    style="@style/size10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/heise" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        style="@style/size10"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="@string/Battery_status"
                        android:textColor="@color/heise" />

                    <TextView
                        android:id="@+id/Histogram_Battery_status"
                        style="@style/size10"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/heise" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/Hista_sydl"
                        style="@style/size10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="@string/pite_battery_charge"
                        android:textColor="@color/heise" />

                    <TextView
                        android:id="@+id/Histogram_charge"
                        style="@style/size10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/heise" />
                </LinearLayout>
            </LinearLayout>
  <!--  
            <ListView
                android:id="@+id/"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
            -->
            
         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <Spinner
                    android:id="@+id/Histogram_sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cortnetschart"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/qita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/his_c_titleqita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                
                <lecho.lib.hellocharts.view.ColumnChartView
                    android:id="@+id/his_line_Cqita"
                    android:layout_width="match_parent"
                    android:layout_height="110dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/his_u_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/his_line_U"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <TextView
                android:id="@+id/his_r1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/his_line_R1"
                android:layout_width="match_parent"
                android:layout_height="110dp" />

            <TextView
                android:id="@+id/his_t_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/his_line_T"
                android:layout_width="match_parent"
                android:layout_height="110dp" />

            <LinearLayout
                android:id="@+id/dingjian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/his_c_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

                <lecho.lib.hellocharts.view.ColumnChartView
                    android:id="@+id/his_line_C"
                    android:layout_width="match_parent"
                    android:layout_height="110dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/his_r2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/his_line_R2"
                android:layout_width="match_parent"
                android:layout_height="110dp" />

            <TextView
                android:id="@+id/his_c2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <lecho.lib.hellocharts.view.ColumnChartView
                android:id="@+id/his_line_C2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginBottom="10dp" />
        <TextView android:layout_height="20dp"
            android:layout_width="match_parent"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>